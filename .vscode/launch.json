{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI (uvicorn) â€“ Debug con reload",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host", "0.0.0.0",
        "--port", "8000"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "subProcess": true,          // <- clave para que enganche el proceso hijo del reloader
      "justMyCode": true,
      "console": "integratedTerminal"
    }
  ]
}
